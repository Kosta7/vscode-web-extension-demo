{
  "name": "repoview",
  "displayName": "RepoView",
  "description": "",
  "version": "0.0.1",
  "publisher": "kosta7",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "browser": "./dist/web/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "authorizeAndFetch",
        "title": "Authorize & Fetch"
      },
      {
        "command": "goToGithubUrlInput",
        "title": "Choose Another Repository",
        "icon": "assets/backIcon.svg"
      },
      {
        "command": "unauthorize",
        "title": "Unauthorize",
        "icon": "assets/unauthorizeIcon.svg"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "githubExplorer",
          "title": "RepoView",
          "icon": "assets/activitybarIcon.svg"
        }
      ]
    },
    "views": {
      "githubExplorer": [
        {
          "type": "webview",
          "id": "githubUrlInput",
          "name": "RepoView",
          "when": "!isFileTreeOpen"
        },
        {
          "id": "fileTree",
          "name": "RepoView",
          "when": "isFileTreeOpen"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "goToGithubUrlInput",
          "when": "view == fileTree",
          "group": "navigation"
        },
        {
          "command": "unauthorize",
          "when": "view != fileTree && isAuthorized",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js",
    "pretest": "pnpm run compile-web",
    "vscode:prepublish": "pnpm run package-web",
    "compile-web": "webpack",
    "watch-web": "webpack --watch",
    "package": "cd webview-ui && pnpm build && cd .. && vsce package",
    "package-web": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. .",
    "dev": "cd webview-ui && pnpm build && cd .. && concurrently \"pnpm run watch-web\" \"pnpm run run-in-browser\""
  },
  "devDependencies": {
    "@types/assert": "^1.5.6",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.6.0",
    "@types/vscode": "^1.82.0",
    "@types/webpack-env": "^1.18.1",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-web": "^0.0.45",
    "@vscode/vsce": "^2.21.0",
    "assert": "^2.0.0",
    "concurrently": "^8.2.1",
    "mocha": "^10.2.0",
    "process": "^0.11.10",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  }
}
